@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CW2_WebClient.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout_Login.cshtml";
}

<div class="container border" style="padding: 20px">
    <form method="post">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Login.login"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Login.login" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Login.senha"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Login.senha" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Entrar" />
            </div>
        </div>
    </form>
</div>

@if(@Model.errologin){
<div class="alert alert-danger">
    Usuário não encontrado
</div>
}




<style>
    .form-group {
        margin-bottom: 1rem;
    }
</style>